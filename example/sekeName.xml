<?xml version="1.0" encoding="UTF-8"?>
<!-- For probe app use this number:  +990009369990064413 -->
<vxml version = "2.1" xml:lang="es-ES">
<form id="MainMenu">
  <field name="SouthParkCharacter">
   <prompt>
   	Di un Seke-Nombre
   </prompt>

  <!-- Definición de gramática. -->
  <grammar xml:lang="es-ES" root = "myrule">
   <rule id="myrule">
   <one-of>
    <item> Jose </item>
    <item> Pimen </item>
    <item> Marina </item>
    <item> Sergio </item>
    <item> Iván </item>
    </one-of>
   </rule>
   </grammar>

   <!-- El usuario no habla, vuelve al field. -->
   <noinput>
    No he oido nada, vuelva a repetirlo.
    <reprompt/>
   </noinput>

   <!-- Se escucha algo pero no se reconoce en la gramática. -->
   <nomatch>
     No he reconocido el nombre, repítalo .
    <reprompt/>
   </nomatch>
  </field>

  <!-- distinción de casos -->
  <filled namelist="SouthParkCharacter">
  <if cond="SouthParkCharacter == 'Sergio'">
   <prompt>
     Valla un inutii
   </prompt>
  <elseif cond="SouthParkCharacter == 'Iván'" />
   <prompt>
     ¿Iván?. Es muy cojo
	¿Has dicho <value expr="SouthParkCharacter"/>?
   </prompt>
  <elseif cond="SouthParkCharacter == 'Marina'" />
   <prompt>
     ¡Marinica!
   </prompt>
  <else/>
   <prompt>
     Me suena ese nombre pero no se quien es...
   </prompt>
  </if>
</filled>
</form>
</vxml>
